package simulator.model;

public class DynamicSupplyRegion extends Region
{
	protected double _food;
	protected double _factor;
	
	public DynamicSupplyRegion(double food, double factor)
	{
		this._food = food;
		this._factor = factor;
	}

	public void update(double dt) {}

	public double get_food(Animal a, double dt) 
	{
		double _food = 0.0;
		int n = 0;
		
		for(int i = 0; i < animals.size(); i++)
		{
			if(animals.get(i)._diet == Diet.HERBIVORE)
				n++;
		}
		
		if(a._diet == Diet.HERBIVORE)
			_food = Math.min(_food, 60.0 * Math.exp(-Math.max(0, n - 5.0) * 2.0) * dt);
		else
			_food = 0.0;
		
		return _food;
	}

}
